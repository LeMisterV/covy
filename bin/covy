#!/usr/bin/env node

var path = require('path');

var Covy = require('../index');

var covy = new Covy({
  path: path.join(process.cwd(), 'test'),
  ext: process.env['EXT'],
  mocha: {
    reporter: process.env['REPORTER'],
    grep: process.env['GREP'],
    ui: process.env['UI']
  }
});

covy.on('end', function (failures) {
  process.exit(failures);
});
